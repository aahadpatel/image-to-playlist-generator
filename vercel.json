{
  "version": 2,
  "builds": [
    {
      "src": "client/**",
      "use": "@vercel/static-build",
      "config": {
        "zeroConfig": true,
        "buildCommand": "cd client && npm install && npm run build",
        "outputDirectory": "client/build"
      }
    },
    {
      "src": "server/**",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/$1",
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/index.html",
      "status": 200
    }
  ]
}
